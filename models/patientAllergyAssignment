const {Sequelize, DataTypes} = require('sequelize');
const sequelize = require('../startup/database');

module.exports = sequelize.define('patient_allergy_assignment', {
    patient_id: {
        type: DataTypes.UUID,
        primaryKey: true,
        allowNull: false,
        validate: {
            isUUID: 4,
            notNull: true,
            notEmpty: true
        },
        references: {
            model: 'patients',
            key: 'id'
        }
    },
    allergy_id: {
        type: DataTypes.UUID,
        primaryKey: true,
        allowNull: false,
        validate: {
            isUUID: 4,
            notNull: true,
            notEmpty: true
        },
        references: {
            model: 'allergies',
            key: 'id'
        }
    }
}, {
    createdAt: 'created_at',
    updatedAt: 'updated_at'
  });